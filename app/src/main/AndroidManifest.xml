<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="michl.timeregistration">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.TRActivityNewEmployee"
            android:label="@string/new_employee_label"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.TRActivityNewAbsence"
            android:label="@string/options_absence"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.TRActivityExport"
            android:label="@string/options_export"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.TRActivityHelp"
            android:label="@string/option_help"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
        <activity
            android:name=".Activities.TRActivitySettings"
            android:label="@string/option_settings"
            android:parentActivityName=".Activities.MainActivity">
        </activity>
    </application>

</manifest>